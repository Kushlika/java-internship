import java.util.*;
import java.io.*;
public class Main {
    public static void main(String[] args){
        Scanner in= new Scanner(System.in);
        Random rd= new Random();
        System.out.println("Welcome to GUESS THE NUMBER game");
        System.out.println("This game has 3 levels");
        System.out.println("In this game you have to guess the random number generated by this code in less than 5 chances");
        System.out.println("If you guess the number correctly you will be promoted to the next level");
        int c1=5;
        int score=0;
         boolean flag=false;
        System.out.println("Let's start the game");
            for(int l=1;l<4;l++){
                flag=false;
                int num=rd.nextInt(100)+1;
                System.out.println();
                System.out.println("Number is:"+num);
                System.out.println("You are in level"+l);

                for(int ch=0;ch<c1;ch++){
                    System.out.println("Enter the number between 1 to 100");
                    int num1=in.nextInt();

                    if(num1>num)
                    System.out.println("The actual number is lower than the entered number");
                    else if(num1<num)
                    System.out.println("The actual number is greater than the entered number");
                    else{
                        if(num1==num){
                            score+=10;
                            System.out.println("Hurray!! You guessed the Number");
                            if(l!=3)
                            System.out.println("Congrats! You have been qualified to"+(l+1)+" level");
                            else{
                            System.out.println("CONGRATULATIONS!! YOU WON THE GAME");
                            }
                            flag=true;
                            break;
                        }
                    }
                }

                    if(flag==false)
                    {
                        System.out.println("You Lost :(");
                        System.out.println("Play from Start");
                        break;
                    }
            }
            System.out.println();
            System.out.println("Your Score is:"+score);
            System.out.println("Thanks for playing!!");
    }
}

